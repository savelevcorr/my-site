doctype html
html(class='no-js')
    head
        include ./jade-templates/head

    body
        nav.top-navbar
            div.row
                div.nav-wrapper
                    .col.l12.m12.s12
                        // Logo (name)
                        a(href="#").brand-logo Андрей Савельев

                        // Main Top Nav
                        ul.right.hide-on-med-and-down
                            include ./jade-templates/main-nav

                    // Hamburger
                    a(href="#" data-activates="slide-out").button-collapse.right
                        i.mdi-navigation-menu

                // Sidebar Nav
                ul#slide-out.side-nav
                    include ./jade-templates/main-nav

        header.row.center.header
            div.container
                section.row
                    img(src="./images/avatar-dark.jpg" height="256" width="256").circle.center.responsive-img.z-depth-1.header__avatar
                    h1.header__name Андрей Савельев

                    hr.header__devider

                main.row
                    section#app


        script(src='assets/js/bundle.js')